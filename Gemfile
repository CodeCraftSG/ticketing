gem 'nokogiri'
gem 'validates_email_format_of'
gem 'carrierwave'
gem 'carrierwave-dropbox'
gem 'newrelic_rpm'
gem 'blockchain'

group :development, :test do
  gem 'foreman'
  gem 'mailcatcher'
  gem 'rspec-rails'
  gem 'pry'
  gem 'web-console', '~> 2.0'
  gem 'byebug'
